{
  "name": "webdrivercss",
  "version": "0.1.0",
  "description": "Regression testing tool for WebdriverJS",
  "author": "Christian Bromann <mail@christian-bromann.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "pretest": "if [ $WEBDRIVERCSS_COVERAGE == '1' ]; then ./node_modules/.bin/istanbul i lib -o lib-cov && cp lib/getPageInfo.js lib-cov && cp lib/makeScreenshot.js lib-cov; fi",
    "test": "./node_modules/.bin/mocha -R $MOCHA_REPORTERS",
    "posttest": "if [ $WEBDRIVERCSS_COVERAGE == '1' ]; then cat lcov.info | ./node_modules/coveralls/bin/coveralls.js; fi",
    "prepublish": "npm prune"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/webdriverjs/webdrivercss.git"
  },
  "dependencies": {
    "resemble": "^1.0.3",
    "async": "^0.2.10",
    "glob": "^3.2.9",
    "gm": "^1.14.2"
  },
  "devDependencies": {
    "mocha": "^1.18.2",
    "coveralls": "~2.10.0",
    "webdriverjs": "^1.5.1",
    "chai": "^1.9.1",
    "fs-extra": "^0.8.1",
    "mocha-istanbul": "^0.2.0"
  },
  "keywords": [
    "webdriverjs",
    "webdriver",
    "phantomcss",
    "regression",
    "test",
    "testing",
    "css",
    "responsive",
    "design"
  ]
}
